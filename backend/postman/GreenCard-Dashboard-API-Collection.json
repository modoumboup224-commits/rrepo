{
    "info": {
        "name": "GreenCard Dashboard API - Secured Endpoints",
        "description": "Collection for testing secured dashboard endpoints with JWT authentication",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{jwt_token}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "user_email",
            "value": "test@example.com",
            "type": "string"
        },
        {
            "key": "user_password",
            "value": "password123",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"password\": \"{{user_password}}\",\n  \"name\": \"Test User\",\n  \"role\": \"consumer\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const response = pm.response.json();",
                                    "if (response.token) {",
                                    "    pm.collectionVariables.set('jwt_token', response.token);",
                                    "    console.log('Token saved:', response.token);",
                                    "} else {",
                                    "    console.error('No token received');",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"password\": \"{{user_password}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Dashboard - Secured Endpoints",
            "item": [
                {
                    "name": "Get Sales Recommendations",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/dashboard/sales-recommendations",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "dashboard",
                                "sales-recommendations"
                            ]
                        }
                    }
                },
                {
                    "name": "Get User Segmentation",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/dashboard/user-segmentation",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "dashboard",
                                "user-segmentation"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Recommendations",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/dashboard/recommendations",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "dashboard",
                                "recommendations"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Orders - Secured Endpoints",
            "item": [
                {
                    "name": "Get All Orders",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/orders",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "orders"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Order by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/orders/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "orders",
                                ":id"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Order",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"items\": [\n    {\n      \"productId\": 1,\n      \"quantity\": 2,\n      \"price\": 10.99\n    }\n  ],\n  \"totalAmount\": 21.98,\n  \"shippingAddress\": {\n    \"street\": \"123 Test Street\",\n    \"city\": \"Test City\",\n    \"postalCode\": \"12345\"\n  }\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/orders",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "orders"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Products - Secured Endpoints",
            "item": [
                {
                    "name": "Get All Products",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/products",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "products"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Product",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Test Product\",\n  \"description\": \"Test product description\",\n  \"price\": 19.99,\n  \"category\": \"Fruits\",\n  \"stock\": 100,\n  \"producerId\": 1\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/products",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "products"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Product",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Updated Product Name\",\n  \"price\": 24.99,\n  \"stock\": 150\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/products/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "products",
                                ":id"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Product",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/products/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "products",
                                ":id"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Error Handling Tests",
            "item": [
                {
                    "name": "Test Invalid Token",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer invalid_token_here"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/dashboard/sales-recommendations",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "dashboard",
                                "sales-recommendations"
                            ]
                        }
                    }
                },
                {
                    "name": "Test Missing Token",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/api/dashboard/sales-recommendations",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "dashboard",
                                "sales-recommendations"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}